<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_avatar_comment_list_item"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/line"
        android:src="@drawable/test" />
    <TextView
        android:text="Comment example"
        android:id="@+id/comment_from_user"
        android:layout_toRightOf="@id/user_avatar_comment_list_item"
        android:layout_below="@id/line"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="15dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/comment_like_list_item"
        android:layout_alignParentRight="true"
        android:layout_below="@id/line"
        android:layout_marginTop="28dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/like"
        android:layout_width="15dp"
        android:layout_height="15dp" />

    <TextView
        android:id="@+id/comm_likes"
        android:layout_below="@id/comment_from_user"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="65dp"
        android:text="0 likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>